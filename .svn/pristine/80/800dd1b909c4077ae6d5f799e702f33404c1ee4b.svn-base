<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newPatientLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grey_to_red_transition"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layoutEditPatientRegimen1"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtViewEditPatientRegimen1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="50dip"
                    android:text="@string/category"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerEditPatientRegimen1"
                    android:layout_width="fill_parent"
                    android:layout_height="70dip"
                    android:layout_marginLeft="20dip"
                    android:popupBackground="@color/ContactEditBackground"
                    android:prompt="@string/categoryPrompt"
                    android:scrollbarStyle="insideOverlay"
                    android:textColor="#372c24" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEditPatientRegimen2"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtViewEditPatientRegimen2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="50dip"
                    android:text="@string/stage"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerEditPatientRegimen2"
                    android:layout_width="fill_parent"
                    android:layout_height="70dip"
                    android:layout_marginLeft="20dip"
                    android:popupBackground="@color/ContactEditBackground"
                    android:prompt="@string/StagePrompt"
                    android:scrollbarStyle="insideOverlay"
                    android:textColor="#372c24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutEditPatientRegimen3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtViewEditPatientRegimen3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="50dip"
                    android:text="@string/schedule"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerEditPatientRegimen3"
                    android:layout_width="fill_parent"
                    android:layout_height="70dip"
                    android:layout_marginLeft="20dip"
                    android:popupBackground="@color/ContactEditBackground"
                    android:prompt="@string/SchedulePrompt"
                    android:scrollbarStyle="insideOverlay"
                    android:textColor="#372c24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/labResultLayout"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txtViewLabResult"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="50dip"
                    android:text="@string/labResult"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerPatientLabResult"
                    android:layout_width="fill_parent"
                    android:layout_height="70dip"
                    android:layout_marginLeft="20dip"
                    android:popupBackground="@color/ContactEditBackground"
                    android:prompt="@string/labResultPrompt"
                    android:scrollbarStyle="insideOverlay"
                    android:textColor="#372c24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dip"
            android:orientation="horizontal" >

            <Button
                android:layout_width="150dip"
                android:layout_height="70dip"
                android:layout_marginLeft="40dip"
                android:background="@drawable/button_background"
                android:onClick="onSaveClick"
                android:text="@string/done"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:layout_width="150dip"
                android:layout_height="70dip"
                android:layout_marginLeft="90dip"
                android:background="@drawable/button_background"
                android:onClick="onCancelClick"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>