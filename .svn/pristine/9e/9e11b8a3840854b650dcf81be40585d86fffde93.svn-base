<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectStatusLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grey_to_red_transition"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/errorMassage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="100dip"
                android:paddingRight="100dip"
                android:paddingTop="70dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="50dip"
                    android:text="@string/screeningResult"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerHIVType"
                    android:layout_width="fill_parent"
                    android:layout_height="70dip"
                    android:layout_marginLeft="20dip"
                    android:entries="@array/hivResult_array"
                    android:popupBackground="@color/ContactEditBackground"
                    android:prompt="@string/screeningResult"
                    android:scrollbarStyle="insideOverlay"
                    android:textColor="#372c24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="100dip"
                android:paddingRight="100dip"
                android:paddingTop="40dip" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginTop="50dip"
                    android:text="@string/hivResult"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinnerStatusEdit"
                    android:layout_width="fill_parent"
                    android:layout_height="70dip"
                    android:layout_marginLeft="20dip"
                    android:entries="@array/hivResult_array"
                    android:popupBackground="@color/ContactEditBackground"
                    android:prompt="@string/hivResult"
                    android:scrollbarStyle="insideOverlay"
                    android:textColor="#372c24" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dip"
            android:orientation="horizontal" >

            <Button
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_marginLeft="40dip"
                android:background="@drawable/button_background"
                android:onClick="onDoneClick"
                android:text="@string/done"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPatientCancelAdd"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_marginLeft="90dip"
                android:background="@drawable/button_background"
                android:onClick="onCancelClick"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>