<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="2dip"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/qId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutQuestionSpinnerText"
            android:layout_width="3dip"
            android:layout_height="fill_parent"
            android:layout_weight="17"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/questions"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="Prajeet"
                android:textSize="16.5sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutQuestionSpinnerSpn"
            android:layout_width="2dip"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left|center_vertical"
            android:minHeight="78dip"
            android:orientation="horizontal"
            android:paddingRight="5dip" >

            <LinearLayout
                android:id="@+id/layoutQuestionSpinnerText"
                android:layout_width="3dip"
                android:layout_height="fill_parent"
                android:layout_marginRight="3dip"
                android:layout_weight="1"
                android:orientation="horizontal" >
            </LinearLayout>

            <Spinner
                android:id="@+id/questionspn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_box_animation" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutquestionWithText"
            android:layout_width="3dip"
            android:layout_height="fill_parent"
            android:layout_weight="17"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/questionsForText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="Prajeet"
                android:textSize="16.5sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:minHeight="78dip"
                android:orientation="horizontal"
                android:paddingRight="5dip" >

                <EditText
                    android:id="@+id/enterdetails"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/edit_box_animation"
                    android:focusable="true"
                    android:gravity="left"
                    android:paddingLeft="8dip" >
                </EditText>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>