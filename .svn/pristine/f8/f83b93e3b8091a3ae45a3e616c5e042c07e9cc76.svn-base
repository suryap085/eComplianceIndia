<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_enroll_fp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/showId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/Wheat"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgRegFpImg"
            android:layout_width="240dp"
            android:layout_height="270dp"
            android:layout_margin="3dp"
            android:background="@color/White"
            android:contentDescription="@string/FingerPrint"
            android:onClick="onScanClick" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblRegHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:textIsSelectable="false"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lblRegScanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/Blue"
        android:textIsSelectable="false"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/imgStatic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/FingerPrint" />

</LinearLayout>