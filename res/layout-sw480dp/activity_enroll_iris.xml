<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_enroll_fp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/showId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="3dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/Wheat"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgRegIrisImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0000FF"
            android:contentDescription="@string/FingerPrint"
            android:onClick="onScanClick"
            android:padding="3dp"
            android:src="@drawable/scan_blank" />
    </LinearLayout>

    <TextView
        android:id="@+id/lblRegHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/Black"
        android:textIsSelectable="false"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/lblRegScanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/Blue"
        android:textIsSelectable="false"
        android:textSize="21sp" />

    <ImageView
        android:id="@+id/imgOnOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/Iris"
        android:onClick="onCameraOnOff" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgScan1"
            android:background="@drawable/number_one"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan2"
            android:background="@drawable/number_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan3"
            android:background="@drawable/number_three"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan4"
            android:background="@drawable/number_four"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan5"
            android:background="@drawable/number_five"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan6"
            android:background="@drawable/number_six"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan7"
            android:background="@drawable/number_seven"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
        <ImageView
            android:id="@+id/imgScan8"
            android:background="@drawable/number_eight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/Iris" />
        
    </LinearLayout>

</LinearLayout>