<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newPatientLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/grey_to_red_transition"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/newPatientMainLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/treatmentId"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtViewTreatmentIdAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:text="A100"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="@string/name"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edittxtPatientNameAdd"
                    android:layout_width="160dp"
                    android:layout_height="40dip"
                    android:background="@drawable/edit_box_animation"
                    android:hint="@string/hintName"
                    android:maxLength="200"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="@string/phoneNumber"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edittxtPatientPhoneAdd"
                    android:layout_width="160dp"
                    android:layout_height="40dip"
                    android:background="@drawable/edit_box_animation"
                    android:hint="@string/hintPhoneNumber"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:text="@string/address"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/patientAddress"
                    android:layout_width="160dp"
                    android:layout_height="40dip"
                    android:background="@drawable/edit_box_animation"
                    android:hint="@string/addressHint"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/selectGender"
                        android:layout_width="160dp"
                        android:layout_height="70dip"
                        android:entries="@array/genderArray"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/genderPrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dip"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/age"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/age"
                        android:layout_width="160dp"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/hintAge"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="20dip"
                android:layout_weight="40"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/enterUserInformation"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtviewPatientErrorAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text=""
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/red"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientCategoryAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/categoryPrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/stage"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientStageAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/StagePrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/centerLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientScheduleAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/SchedulePrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtViewCenter"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/center"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientCenterAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/centerPrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/red"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labmonth"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientLabMonth"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:entries="@array/labMonth"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/labMonthPrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/labResultLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtViewLabResult"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labResult"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientLabResult"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/labResultPrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labDate"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/labDate"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/labDatehint"
                        android:inputType="date"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labDmc"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/labDmc"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/labDmchint"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labNo"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/labno"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/labNohint"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/labWeight"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/labweight"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/labWeighthint"
                        android:inputType="numberDecimal"
                        android:maxLength="3"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/red"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diseaseClassification"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientDiseaseAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:entries="@array/diseaseArray"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/diseasePrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Typeofpatient"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientType"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:entries="@array/patientTypeArray"
                        android:gravity="left"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/patinettypePrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/diseaseSite_layout"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diseaseSite"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/DiseaseSite"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/edit_box_animation"
                    android:hint="@string/diseaseSiteHint"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/otherpatientlayout"
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/otherpatient"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/otherpatientType"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/edit_box_animation"
                    android:hint="@string/otherpatienthint"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nikshayId"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/nikashayId"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/nikshayidhint"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tbNumber"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/tbnumber"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/tbNumberHint"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/adharno"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/adharno"
                        android:layout_width="match_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:hint="@string/adharnohint"
                        android:inputType="number"
                        android:maxLength="12"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/patientsource"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnerPatientSource"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:entries="@array/patientSourceArray"
                        android:gravity="left"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/patinetsourcePrompt"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/smokingHistory"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/spinnersmokinghistory"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:entries="@array/smokinghistoryArray"
                        android:popupBackground="@color/ContactEditBackground"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hivLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtViewHiv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/hivResult"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/hivResult"
                        android:layout_width="fill_parent"
                        android:layout_height="70dip"
                        android:entries="@array/hivResult_array"
                        android:popupBackground="@color/ContactEditBackground"
                        android:prompt="@string/screeningResult"
                        android:scrollbarStyle="insideOverlay"
                        android:textColor="#372c24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/red"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="10dp" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/priordosetaken"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/doseTakenLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/IPDoseLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/IPdose"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit_txt_IP"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ExtIpDoseLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Ex_Ipdose"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/edit_txt_EX_IP"
                        android:layout_width="fill_parent"
                        android:layout_height="40dip"
                        android:background="@drawable/edit_box_animation"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CPDoseLayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/CPdose"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/edit_txt_CP"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"
                    android:background="@drawable/edit_box_animation"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:text="@string/ChildrenOldAges"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/chkMoit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dip"
            android:layout_marginTop="20dip"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnPatientSaveAdd"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:background="@drawable/button_background"
                android:onClick="onSaveClick"
                android:text="@string/save"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnPatientCancelAdd"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_marginLeft="10dip"
                android:background="@drawable/button_background"
                android:onClick="onCancelClick"
                android:text="@string/cancel"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>